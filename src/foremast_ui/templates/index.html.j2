<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset="utf-8">
    <title>Foremast UI</title>

    <!-- bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- bootstrap -->
  </head>
  <body>
    <header class="jumbotron">
      <h1>Foremast UI</h1>
    </header>

    <section class="container">

      <h2>application.json</h2>

      <form class="" action="index.html" method="post">

        {% for section, items in application_json.items()|sort %}
          <h3>{{ section }}</h3>

          <section class="form-group row">

            {% if items is mapping %}
              {% for key, value in items.items()|sort %}
                <label for="{{ key }}" class="col-form-label col-sm-2">{{ key }}:</label>
                <input type="text" class="form-control col-sm-10" name="{{ key }}" value="{{ value }}">
              {% endfor %}
            {% else %}
              <label for="{{ item }}" class="col-form-label col-sm-2">{{ item }}:</label>
              <input type="text" class="form-control col-sm-10" name="{{ item }}" value="{{ item }}">
            {% endif%}

          </section>
        {% endfor %}

        <button type="submit" name="submit" class="btn btn-success">Render</button>
        <button type="reset" name="reset" class="btn btn-warning">Reset</button>
      </form>

    </section>

    <!-- bootstrap requirements -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <!-- bootstrap requirements -->

    <!-- bootstrap -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <!-- bootstrap -->
  </body>
</html>
